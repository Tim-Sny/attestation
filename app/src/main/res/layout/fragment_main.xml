<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    tools:context=".MainFragment">

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33333300"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:paddingVertical="60dp"
                android:id="@+id/fragment_main_text_1"
                style="@style/FontSizeMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="КРУГЛОСУТОЧНО\nБЕЗ ВЫХОДНЫХ\nБЕЗ ПРАЗДНИКОВ"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fragment_main_text_2"
                style="@style/FontSizeMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дежурный (круглосуточно)"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:textSize="18sp"
                android:id="@+id/call_button"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+7 555-555-5555"
                app:icon="@drawable/ic_round_call_24"
                android:layout_gravity="center"/>

            <TextView
                android:paddingVertical="30dp"
                android:id="@+id/fragment_main_text_3"
                style="@style/FontSizeMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Звоните, чтобы записаться на монтаж\nили заказать эвакуатор"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:paddingVertical="30dp"
                android:id="@+id/fragment_main_text_4"
                style="@style/FontSizeMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Скидка до 10% при звонке\nиз мобильного приложения!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/site_button"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.гвоздодер.рф"
                app:icon="@drawable/ic_round_map_24"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>